{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "plugin:react/recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react", "react-hooks"
    ],
    "rules": {
      // 检查 Hooks 的使用规则
      "react-hooks/rules-of-hooks": "error", 
      // 检查依赖项的声明 
      "react-hooks/exhaustive-deps": "warn"
    }
}
